!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %title Blog
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .container
      .blog-header
        %h1.blog-title BLOG
        %p.lead.blog-description My experimental blog.
        - if user_signed_in?
          - if current_user.has_role? :admin
            %b ADMIN
          %p.blog-main= current_user.email
        %nav.navbar.navbar-default
          .container
            .navbar-header
              %a.navbar-brand{href: "/"} Home
            %ul.nav.navbar-nav.navbar-left
              - if user_signed_in?
                %li
                  = link_to "Control panel", admin_categories_url, class: "btn btn-link"
                %li
                  = link_to "Profile", edit_user_registration_path, class: "btn btn-link"
                %li
                  = link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-link"
              - else
                %li
                  = link_to "Log in", new_user_session_path, class: "btn btn-link"
                %li
                  = link_to "Registration", new_user_registration_path, class: "btn btn-link"
      = yield
