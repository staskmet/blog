%p#notice= notice
%h1=t "categories.label.list_header"
%table{class: "table table-condensed table-bordered" }
  - @admin_categories.each do |admin_category|
    %tr
      %th
        = admin_category.name
      %td= link_to t("categories.button.show"), admin_category_path(admin_category), class: "btn btn-info"
      %td= link_to t("categories.button.edit"), edit_admin_category_path(admin_category), class: "btn btn-warning"
      %td= link_to t("categories.button.destroy"), admin_category_path(admin_category), method: :delete, data: { confirm: t("categories.confirm.destroy") }, class: "btn btn-danger"

%br

= link_to t("categories.button.new"), new_admin_category_path, class: "btn btn-primary"
