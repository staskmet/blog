<p id="notice"><%= notice %></p>

<div class="blog-post">
  <h2 class="blog-post-title"><%= @post.title %></h2>
  <p class="blog-post-meta"><%= @post.updated_at %> by <%= @post.user.email %></p>
  <p><%= @post.body %></p>
  <p><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<%= link_to 'Back', posts_path %>
</div>
